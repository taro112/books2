<div class="container">
<div class="row">
 <%= render 'books/book', book: @book ,user: @user %>
<div class="col-md-8 offset-md-1">
  

<h2>Users</h2>

<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
     
    </tr>
  </thead>
  <% @users.each do |user| %>

  <tbody>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg",size: "50x50"%></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td> 
      </tr>
     <%end%>
      
  </tbody>
</table>

    
    
    
  