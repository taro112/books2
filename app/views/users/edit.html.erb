<% if @user.errors.any? %>
   <%= @user.errors.count %>件のエラーが発生しました
   <% @user.errors.full_messages.each do |message| %>
    <%= message %>
   <% end %>
  <% end %>

<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
</div>

<%= form_with model:@user, local:true do |f| %>
　<div class="container">
  　<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    　<div class="form-group">
    　　<label for="user_name">Name</label>
    　　<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    　</div>
      
      <div class="form-group">
        <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"introduction", placeholder:""%>
      </div>
      <div class="form-group">
        <%= f.submit 'Update User' %>
      </div>
      <footer>
      　<div class="container mt-5">
  	  　　<div class="row">
    	　　　<div class="mx-auto">
    		　　　<p>CopyRight Infratop.inc</p>
    	　　　</div>
    　　　　</div>
  　　　　</div>
    　</footer>
  　</div>
　</div>

<% end %>