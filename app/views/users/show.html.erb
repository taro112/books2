<h2 class="mt-3">New book</h2>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/users', local:true do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <br>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <br>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
</div>
