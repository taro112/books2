<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>




<div class="container">
      <div class="row">

        <div class="col-md-3">

			<h2>User info</h2>

			<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>

			<table class="table">
  			<tbody><tr></tr>
  			<tr>
  	  			<th>name</th>
	  			<th><%= user.name %></th>
	  			<th></th>
  			</tr>
  			<tr>
	  			<th>introduction</th>
	  			<th><%= user.introduction %></th>
	  			<th></th>
  			</tr>
			</tbody></table>

			<%= link_to "", edit_user_path(user.id), class:'btn-outline-secondary btn-block fas fa-user-cog' %>

			<div class="profile-container">
			</div>

			<h2 class="mt-3">New book</h2>
			<!-- form_with部分 -->

			<%= form_with model: book, local:true do |f| %>
			<div>
				<%= f.label :title %>
				<%= f.text_field :title, class: "col-sm-12 book_title" %>
			</div>

			<div>
				<%= f.label :opinion %>
				<%= f.text_area :body, class: "col-sm-12 book_body" %>
			</div>

			<div>
				<%= f.submit 'Create Book', class: "btn btn-sm btn-success col-sm-6" %>
			</div>
			<% end %>
          </div>
         



